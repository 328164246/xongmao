<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/guancha_listview_img"
            android:layout_width="200dp"
            android:layout_height="110dp"
            android:scaleType="fitXY" />

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/guancha_listview_img"
            android:background="#666666">

            <ImageView

                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/home_play_icon" />

            <TextView
                android:id="@+id/guancha_tv_length"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white" />


        </LinearLayout>

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView

            android:id="@+id/guancha_listview_tv_title"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:textColor="#000"
            android:maxLength="13"
            android:maxLines="2"
            android:singleLine="false"
            android:text="aaaaaaaaaaaa"
            android:textSize="20sp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/guancha_listview_tv_time"
            android:text="aaaaaaaaaa"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content" />


    </LinearLayout>
</LinearLayout>